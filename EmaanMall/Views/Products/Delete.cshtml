@model EmaanMall.Models.Product

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="page-title">
        <div class="row">
            <div class="col-6">
                <h3>Delete Product</h3>
            </div>
            <div class="col-6">

            </div>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header">
                    <h5 style="color:red">
                        Are you sure you want to delete this?
                    </h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-2">
                            Product Name :
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ProductName)
                        </dd>
                        <dt class="col-sm-2">
                            Product Status :
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ProductStatus)
                        </dd>
                        <dt class="col-sm-2">
                            Date :
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ProductDate)
                        </dd>
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="ProductId" />
                        <div class="form-group mb-0"><button type="submit" class="btn btn-success mr-3">Delete</button><a asp-action="Index" class="btn btn-danger">Cancel</a></div>

                    </form>
                </div>
                </div>
            </div>
        </div>
    </div>

