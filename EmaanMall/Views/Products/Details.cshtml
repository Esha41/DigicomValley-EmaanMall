@model EmaanMall.Models.Product

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="page-title">
        <div class="row">
            <div class="col-6">
                <h3>Product Details</h3>
            </div>
            <div class="col-6">

            </div>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-2">
                            Product Name :
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ProductName)
                        </dd>
                        <dt class="col-sm-2">
                            Product Status :
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ProductStatus)
                        </dd>
                        <dt class="col-sm-2">
                            Date :
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ProductDate)
                        </dd>
                    </dl>
                    <br />
                    <div class="row">
                        <div class="col">
                            <div class="form-group mb-0"><a asp-action="Index" class="btn btn-info">Back to list</a></div>
                        </div>
                    </div>
                </div>
              
            </div>
        </div>
    </div>
</div>

