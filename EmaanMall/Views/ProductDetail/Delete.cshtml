
@model EmaanMall.Models.ViewModel.ProductsVM

@{
    ViewData["Title"] = "Delete";
}


<div class="app-page-title" style="margin-top:-4%">

    <h4 style="margin-left:2%;font-size:250%;color:red" class="text-info;">Are you sure you want to delete this?</h4>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-body">
                    <h4><b>Product Details</b></h4>
                    <br />
                    @* @foreach (var item in Model.productDetails)
                        {*@

                    <div class="row">
                        <div class="col-md-4"><b>Name  </b> : @Model.productDetails.Product.ProductName</div>
                        <div class="col-md-4"><b>Price  </b> :  @Model.productDetails.ProductDetailUnitPrice</div>

                        <div class="col-md-4"><b>Discount Price   </b> : @Model.productDetails.DiscountPrice</div>

                    </div>
                    <br />
                    <div class="row">
                        @if (Model.productDetails.FeatureProduct == true)
                        {
                            <div class="col-md-4"><b>Featured    </b> :<span style="color:green"> Active</span></div>
                        }
                        else
                        {
                            <div class="col-md-4"><b>Featured    </b> :<span style="color:red"> Deactive</span></div>
                        }
                        @if (Model.productDetails.BestSell == true)
                        {
                            <div class="col-md-4"><b>Best Sell  </b> : <span style="color:green">Active</span></div>
                        }
                        else
                        {
                            <div class="col-md-4"><b>Best Sell  </b> :  <span style="color:red">Deactive</span></div>

                        }
                        @if (Model.productDetails.TopRated == true)
                        {
                            <div class="col-md-4"><b>Top Rated  </b>: <span style="color:green">Active</span></div>
                        }
                        else
                        {
                            <div class="col-md-4"><b>Top Rated  </b>: <span style="color:red">Deactive</span></div>
                        }
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-md-4"><b>Total Price  </b>:  @Model.productDetails.ProductDetailTotalPrice</div>
                        <div class="col-md-4"><b>Product No   </b> : @Model.productDetails.ProductDetailModelNo</div>
                    </div>
                    <br />
                    @if (Model.productDetails.GuaranteePolicy != null)
                    {
                        <div class="row">
                            <div class="col-md-12"><b> Guarantee Policy  </b> : @Model.productDetails.GuaranteePolicy</div>
                        </div>
                        <br />
                    }
                    <div class="row">
                        <div class="col-md-12"><b> Description   </b> : @Model.productDetails.ProductDetailDescription</div>
                    </div>

                    @if (Model.ProductColorsList.Count() > 0)
                    {
                        <br />
                        <div class="row">
                            <div class="col-md-4">
                                <b>
                                    Colors
                                </b>:
                                @{ var name1 = " ";}
                                @{

                                    foreach (var cat in Model.ProductColorsList)
                                    {
                                        if (cat.ProductDetailId == Model.productDetails.ProductDetailId)
                                        {
                                            <br />
                                            name1 = cat.ColorName + "   " + cat.ColorCode;
                                            <em>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;- @name1</em>

                                        }
                                    }

                                }
                            </div>
                        </div>
                    }
                    else
                    {
                        <br />
                        <div class="row">
                            <div class="col-md-4">
                                <b>
                                    Colors
                                </b>:
                                Not Available
                            </div>
                        </div>
                    }
                    <br />
                    @if (Model.ProductSizeList.Count() > 0)
                    {
                        <div class="row">
                            <div class="col-md-4">
                                <b>
                                    Size
                                </b>:
                                @{ var name2 = " ";}
                                @{

                                    foreach (var s in Model.ProductSizeList)
                                    {
                                        if (s.ProductDetailId == Model.productDetails.ProductDetailId)
                                        {
                                            <br />
                                            name2 = s.Size;
                                            <em>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;- @name2</em>

                                        }
                                    }

                                }
                            </div>
                            <br />
                            <br />
                        </div>
                    }
                    else
                    {

                        <div class="row">
                            <div class="col-md-4">
                                <b>
                                    Size
                                </b>:
                                Not Available
                            </div>
                        </div>
                    }
                    <br />
                    <div class="row">
                        <div class="col-md-4">
                            <b>
                                Categories
                            </b>:
                            <br />
                            @{ var name = " ";}
                            @{

                                foreach (var cat in Model.productCategoriesList)
                                {
                                    if (cat.ProductDetailId == Model.productDetails.ProductDetailId)
                                    {
                                        <br />
                                        name = cat.Category.CategoryName;
                                        <em>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;- @name</em>

                                    }
                                }

                            }
                        </div>
                        <br />
                        <br />
                    </div>
                    <br />

                </div>
            </div>
        </div>
    </div>
</div>
<br />
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-body">
                    <h4><b>Bundles</b></h4>
                    <br />
                    @foreach (var item in Model.productPricesBundles)
                    {

                        <div class="row">
                            <div class="col-md-3">
                                <b>Quantity </b> :
                                @item.ProductBundleQuantity
                            </div>
                            <div class="col-md-3">
                                <b>
                                    Price
                                </b>:
                                @item.ProductBundlePrice

                            </div>
                            <div class="col-md-3">
                                <b>
                                    Unit
                                </b>:
                                @item.ProductBundleUnit

                            </div>
                            @if (Model.ProductSizeList.Any(a => a.ProductSizesId == item.SizeId))
                            {
                                <div class="col-md-3">
                                    <b>
                                        Size
                                    </b>:
                                    @{
                                        var size = Model.ProductSizeList.Where(a => a.ProductSizesId == item.SizeId).FirstOrDefault().Size;

                                    }

                                    @size

                                </div>
                            }
                        </div>
                        <br />

                    }
                </div>
            </div>
        </div>
    </div>
</div>
<br />
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-body">
                    <h4><b>Images</b></h4>
                    <br />
                    @foreach (var item in Model.productImagesList)
                    {

                        <br />@*
                            <img src="~/Uploads/@item.ProductImageName" class="img-250 img-fluid m-r-20 update_img_0" style="width:300px; height:200px;" />*@
                        <img src="~/Uploads/@item.ProductImageName" height="130" width="200" />

                        <br />
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<br />
<div class="row">
    <div class="col">
        <div class="form-group mb-0"><button type="submit" class="btn btn-success mr-3" asp-action="Delete" asp-route-id="@Model.ProductDetailId">Delete</button><a class="btn btn-danger">Cancel</a></div>
    </div>
</div>