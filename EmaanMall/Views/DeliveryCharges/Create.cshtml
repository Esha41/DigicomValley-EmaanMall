@model EmaanMall.Models.DeliveryCharges

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <div class="page-title">
        <div class="row">
            <div class="col-6">
                <h3>Create Delivery Charges</h3>
            </div>
            <div class="col-6">

            </div>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-body">
                    
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row">
                            <div class="col-md-4">

                                <div class="form-group">
                                    <label asp-for="DeliveryChargesProvince" class="control-label">Delivery Charges Province</label>
                                    <input asp-for="DeliveryChargesProvince" class="form-control" />
                                    <span asp-validation-for="DeliveryChargesProvince" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="DeliveryChargesCity" class="control-label">Delivery Charges City</label>
                                    <input asp-for="DeliveryChargesCity" class="form-control" />
                                    <span asp-validation-for="DeliveryChargesCity" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="DeliveryChargesAmount" class="control-label">Delivery Charges Amount</label>
                                    <input asp-for="DeliveryChargesAmount" class="form-control" />
                                    <span asp-validation-for="DeliveryChargesAmount" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="DeliveryChargesDate" class="control-label">Date</label>
                                    <input asp-for="DeliveryChargesDate" class="form-control" />
                                    <span asp-validation-for="DeliveryChargesDate" class="text-danger"></span>
                                </div>
                            </div>

                        </div>
                        <br />
                        <div class="row">
                            <div class="col">
                                <div class="form-group mb-0"><button type="submit" class="btn btn-success mr-3">Create</button><a asp-action="Index" class="btn btn-danger">Cancel</a></div>
                            </div>
                        </div>
                    </form>
                        

                  
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
