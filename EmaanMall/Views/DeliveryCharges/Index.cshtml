@model IEnumerable<EmaanMall.Models.DeliveryCharges>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="tap-top"><i data-feather="chevrons-up"></i></div>
    <!-- tap on tap ends-->
    <!-- page-wrapper Start-->
    
            <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="page-title">
            <div class="row">
                <div class="col-6">
                    <h3>Delivery Charges</h3>
                </div>
                <div class="col-6" style="text-align:right">
                    <h5><a class="mb-2 mr-2 btn-icon btn-icon-only btn-shadow btn btn-primary" asp-action="Create">Create New</a></h5>
                </div>
            </div>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="display" id="basic-1">
                    <thead>
                        <tr>
                            <th>
                              Delivery Charges Province
                            </th>
                            
                            <th>
                               Delivery Charges City
                            </th>
                            
                            <th>
                           Delivery Charges Amount
                            </th>
                            
                           
                            
                            <th>
                    Date
                            </th>

                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.DeliveryChargesProvince)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.DeliveryChargesCity)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.DeliveryChargesAmount)
                            </td>



                            <td>
                                @Html.DisplayFor(modelItem => item.DeliveryChargesDate)
                            </td>

                            <td class="text-center">
                                <a class="mb-2 mr-2 btn-icon btn-icon-only btn-shadow btn-dashed btn btn-outline-warning" asp-action="Details" asp-route-id="@item.DeliveryChargesId"><i class="icon-comment-alt"></i></a>
                                <a class="mb-2 mr-2 btn-icon btn-icon-only btn-shadow btn-dashed btn btn-outline-info" asp-action="Edit" asp-route-id="@item.DeliveryChargesId"><i class="icon-pencil"></i></a>
                                <a class="mb-2 mr-2 btn-icon btn-icon-only btn-shadow btn-dashed btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.DeliveryChargesId"><i class="icon-trash"></i></a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
                   


   