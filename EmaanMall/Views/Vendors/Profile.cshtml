@model EmaanMall.Models.ViewModel.VendorVM

@{
    ViewData["Title"] = "Profile";
}
@section productCreatejscss{
    <link rel="stylesheet" type="text/css" href="../assets/css/vendors/datatables.css">

    <link rel="stylesheet" type="text/css" href="../assets/css/vendors/simple-line-icon.css">

    <link rel="stylesheet" type="text/css" href="../assets/css/vendors/select2.css">
}
<div class="container-fluid">
    <div class="page-title">
        <div class="row">
            <div class="col-6">
                <h3>
                    Vendor Profile
                </h3>
            </div>
        </div>
    </div>
</div>
<!-- Container-fluid starts-->
<div class="container-fluid">
    <form asp-action="Edit" class="form theme-form wizard-horizontal" enctype="multipart/form-data">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-12">
                    <div class="card">

                        <div class="card-body">
                            <div class="form theme-form">

                                <div class="row">
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label asp-for="vendors.VendorName" class="control-label">Vendor Name </label>
                                            <input asp-for="vendors.VendorName" class="form-control" required disabled />
                                            <span asp-validation-for="vendors.VendorName" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label asp-for="vendors.BusinessName" class="control-label">Business Name</label>
                                            <input asp-for="vendors.BusinessName" class="form-control" disabled />
                                            <span asp-validation-for="vendors.BusinessName" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label asp-for="vendors.Phone" class="control-label">Phone Number</label>
                                            <input asp-for="vendors.Phone" class="form-control" required disabled />
                                            <span asp-validation-for="vendors.Phone" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label asp-for="vendors.Email" class="control-label">Email</label>
                                            <input asp-for="vendors.Email" class="form-control" disabled />
                                            <span asp-validation-for="vendors.Email" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <br />
                              
                                <div class="row">
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label asp-for="vendors.Password" class="control-label">Password</label>
                                            <input asp-for="vendors.Password" class="form-control" readonly />
                                            <span asp-validation-for="vendors.Password" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <div class="container-fluid">
                                                <div class="select2-drpdwn">
                                                    <div class="row">
                                                        <div class="col-md-12">

                                                            <div class="mb-2">
                                                                <div class="col-form-label">Business Categories:</div>
                                                                <select class="js-example-placeholder-multiple col-sm-12" asp-for="ProductCategoryIds" asp-items="ViewBag.productsCategories" multiple="multiple" disabled>
                                                                </select>
                                                            </div>

                                                        </div>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <br />
                                <div class="row">
                                    <div class="col-sm-12">
                                        <div class="form-group">
                                            <label for="exampleFormControlTextarea1">Address:</label>
                                            <textarea class="form-control" id="exampleFormControlTextarea1" rows="2" asp-for="vendors.Address" readonly></textarea>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-10">
                                        <img src="~/Uploads/@Model.vendors.Image" height="150" width="150" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    @if (User.IsInRole("Admin"))
                    {
                        <div class="form-group mb-0"><button asp-controller="Vendors" asp-action="VendorList" class="btn btn-danger">Back To List</button></div>

                    }
                    else
                    {
                    <div class="form-group mb-0"><button type="submit" class="btn btn-success mr-3" asp-controller="Vendors" asp-action="Edit">Edit</button><button asp-controller="Home" asp-action="Index" class="btn btn-danger">Cancel</button></div>
                    }
                </div>
            </div>
        </div>
    </form>
</div>
@section productCreatejs{
    <script src="../assets/js/datatable/datatables/jquery.dataTables.min.js"></script>
    <script src="../assets/js/datatable/datatables/datatable.custom.js"></script>

    <script src="../assets/js/icons/icons-notify.js"></script>
    <script src="../assets/js/icons/icon-clipart.js"></script>

    <script src="../assets/js/select2/select2.full.min.js"></script>
    <script src="../assets/js/select2/select2-custom.js"></script>
}