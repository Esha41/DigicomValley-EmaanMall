@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}


<div class="row">
    <div class="col-sm-2"></div>
    <div class="col-sm-6">

        <section>
            <form id="account" method="post">

                <div style="text-align: center;">
                    <br />
                    <br />
                    <a href="~/"><img style="width: 300px; height: 100px;" class="img-fluid for-light" src="~/assets/images/logo/Admin-logo-White.png" alt=""><img class="img-fluid for-dark" src="~/assets/images/logo/Admin-Logo.png" alt=""></a>
                    <br />
                </div>
                <h1 style="text-align:center">@ViewData["Title"]</h1>
                <h4 style="text-align:center">Use a local account to log in.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div style="text-align:center" class="form-group">
                    <button type="submit" class="btn btn-primary">Log in</button>
                </div>
            </form>
        </section>
    </div>
    <div class="col-sm-4">
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
